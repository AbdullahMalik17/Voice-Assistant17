# Voice Assistant Configuration Template
# Copy this to .env and fill in your values

# ===========================
# API Keys (Optional - for cloud services)
# ===========================
# Get your API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Gemini: https://makersuite.google.com/app/apikey
# - ElevenLabs: https://elevenlabs.io/subscription
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ===========================
# Service Configuration
# ===========================
# Options: local, api, hybrid
STT_MODE=hybrid
LLM_MODE=hybrid
TTS_MODE=hybrid

# ===========================
# Privacy Settings
# ===========================
# Enable encrypted conversation persistence
ENABLE_CONVERSATION_PERSISTENCE=false

# Conversation data retention in days
CONVERSATION_RETENTION_DAYS=7

# Encryption password (prompted on first run if persistence enabled)
# CONVERSATION_ENCRYPTION_KEY=your_secure_password_here

# ===========================
# Performance Tuning
# ===========================
# Wake word detection sensitivity (0.0 to 1.0)
WAKE_WORD_SENSITIVITY=0.5

# STT model selection
# Options: whisper-tiny, whisper-base, whisper-small, whisper-medium, whisper-large
STT_MODEL=whisper-base

# LLM model (for API mode)
LLM_MODEL=gemini-2.5-flash

# Ollama model (for local mode)
OLLAMA_MODEL=llama2:7b

# TTS voice selection
TTS_VOICE=default

# ===========================
# Logging Configuration
# ===========================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# Enable Prometheus metrics export
METRICS_ENABLED=true

# ===========================
# Audio Configuration
# ===========================
# Audio sample rate (Hz)
AUDIO_SAMPLE_RATE=16000

# Audio channels (1=mono, 2=stereo)
AUDIO_CHANNELS=1

# Audio chunk size for processing
AUDIO_CHUNK_SIZE=1024

# ===========================
# Network Configuration
# ===========================
# Network health check interval (seconds)
NETWORK_CHECK_INTERVAL=5

# Retry delay on network failure (seconds)
NETWORK_RETRY_DELAY=30

# Maximum queued requests during network outage
MAX_QUEUE_ITEMS=10

# ===========================
# Context Management
# ===========================
# Maximum conversation exchanges to remember
MAX_CONVERSATION_EXCHANGES=5

# Conversation timeout (seconds)
CONVERSATION_TIMEOUT_SECONDS=300

# ===========================
# Action Execution
# ===========================
# Require confirmation for destructive actions
REQUIRE_ACTION_CONFIRMATION=false

# Action execution timeout (seconds)
ACTION_TIMEOUT_SECONDS=30

# ===========================
# Playwright Configuration
# ===========================
# Enable Playwright MCP integration
PLAYWRIGHT_ENABLED=true

# Browser to use for Playwright
PLAYWRIGHT_BROWSER=chromium

# Headless mode
PLAYWRIGHT_HEADLESS=false

# ===========================
# Phase 1: Integration APIs
# ===========================

## Slack Integration
# Get your bot token from: https://api.slack.com/apps
# 1. Create a new app
# 2. Add OAuth scopes: chat:write, channels:list, groups:list, users:read, files:write
# 3. Install to workspace
# 4. Copy Bot User OAuth Token
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here

## Discord Integration
# Get your bot token from: https://discord.com/developers/applications
# 1. Create new application
# 2. Create bot user
# 3. Enable required intents (Message Content Intent)
# 4. Copy bot token
# Option A: Direct bot token
DISCORD_BOT_TOKEN=your-discord-bot-token-here
# Option B: Webhook URL (simpler, no token needed)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

## Notion Integration
# Get your API key from: https://www.notion.so/my-integrations
# 1. Create new integration
# 2. Copy Internal Integration Token (starts with secret_)
NOTION_API_KEY=secret_your-notion-api-key-here

## Trello Integration
# Get API key from: https://trello.com/app-key
# 1. Copy API Key
# 2. Click "Token" to generate API token
TRELLO_API_KEY=your-trello-api-key-here
TRELLO_API_TOKEN=your-trello-api-token-here

# ===========================
# Phase 2: Performance & Caching
# ===========================

## LLM Response Caching
# Enable caching of LLM responses
ENABLE_LLM_CACHE=true

# Cache TTL in seconds (default: 1800 = 30 minutes)
LLM_CACHE_TTL=1800

# Use Redis for caching (set false for in-memory)
USE_REDIS_CACHE=false

# Redis connection string (if USE_REDIS_CACHE=true)
REDIS_URL=redis://localhost:6379/0

# Redis password (if required)
REDIS_PASSWORD=

## Streaming Response
# Enable streaming responses for LLM
ENABLE_STREAMING=true

# Stream chunk size (characters)
STREAM_CHUNK_SIZE=20

## WebSocket Optimization
# Rate limiting: max requests per time window
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW_SECONDS=60

# Message queue size
MESSAGE_QUEUE_SIZE=100

# Maximum concurrent WebSocket connections
MAX_WEBSOCKET_CONNECTIONS=1000

# Message batching interval (ms)
MESSAGE_BATCH_INTERVAL_MS=100

# ===========================
# Phase 2D: Browser Automation Performance
# ===========================

# Navigation cache TTL in seconds
BROWSER_CACHE_TTL_SECONDS=300

# Enable browser navigation caching
BROWSER_ENABLE_CACHE=true

# Retry attempts for flaky selectors
BROWSER_RETRY_ATTEMPTS=3

# Exponential backoff factor for retries
BROWSER_BACKOFF_FACTOR=1.5

# ===========================
# Phase 3: Memory & NLP
# ===========================

## Conversation Summarization
# Enable automatic conversation summarization
ENABLE_SUMMARIZATION=true

# Summarize after this many turns
SUMMARIZATION_THRESHOLD=20

# Keep this many recent turns in memory
CONTEXT_WINDOW_TURNS=10

# Summarization type: full, key_points, action, topic
SUMMARIZATION_TYPE=full

## Entity Extraction
# Use spaCy for entity extraction (requires: python -m spacy download en_core_web_sm)
ENABLE_SPACY_NER=true

# Fallback to regex patterns if spaCy not available
ENABLE_PATTERN_MATCHING=true

## Advanced Voice Commands
# Enable fuzzy matching for commands
ENABLE_FUZZY_MATCHING=true

# Minimum confidence threshold for fuzzy matching (0.0-1.0)
VOICE_COMMAND_MIN_CONFIDENCE=0.7

# Enable typo correction
ENABLE_TYPO_CORRECTION=true

# ===========================
# Production Deployment
# ===========================

# Environment mode: development, staging, production
ENVIRONMENT=development

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# API base URL for production
API_BASE_URL=http://localhost:8000

# Frontend base URL
FRONTEND_BASE_URL=http://localhost:3000

# ===========================
# Advanced Configuration
# ===========================

# Enable debug logging for integrations
DEBUG_INTEGRATIONS=false

# Enable metrics collection
METRICS_ENABLED=true

# Prometheus metrics port
METRICS_PORT=9090
