# Voice Assistant Configuration Template
# Copy this to .env and fill in your values

# ===========================
# API Keys (Optional - for cloud services)
# ===========================
# Get your API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Gemini: https://makersuite.google.com/app/apikey
# - ElevenLabs: https://elevenlabs.io/subscription
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ===========================
# Service Configuration
# ===========================
# Options: local, api, hybrid
STT_MODE=hybrid
LLM_MODE=hybrid
TTS_MODE=hybrid

# ===========================
# Privacy Settings
# ===========================
# Enable encrypted conversation persistence
ENABLE_CONVERSATION_PERSISTENCE=false

# Conversation data retention in days
CONVERSATION_RETENTION_DAYS=7

# Encryption password (prompted on first run if persistence enabled)
# CONVERSATION_ENCRYPTION_KEY=your_secure_password_here

# ===========================
# Performance Tuning
# ===========================
# Wake word detection sensitivity (0.0 to 1.0)
WAKE_WORD_SENSITIVITY=0.5

# STT model selection
# Options: whisper-tiny, whisper-base, whisper-small, whisper-medium, whisper-large
STT_MODEL=whisper-base

# LLM model (for API mode)
LLM_MODEL=gemini-2.5-flash

# Ollama model (for local mode)
OLLAMA_MODEL=llama2:7b

# TTS voice selection
TTS_VOICE=default

# ===========================
# Logging Configuration
# ===========================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# Enable Prometheus metrics export
METRICS_ENABLED=true

# ===========================
# Audio Configuration
# ===========================
# Audio sample rate (Hz)
AUDIO_SAMPLE_RATE=16000

# Audio channels (1=mono, 2=stereo)
AUDIO_CHANNELS=1

# Audio chunk size for processing
AUDIO_CHUNK_SIZE=1024

# ===========================
# Network Configuration
# ===========================
# Network health check interval (seconds)
NETWORK_CHECK_INTERVAL=5

# Retry delay on network failure (seconds)
NETWORK_RETRY_DELAY=30

# Maximum queued requests during network outage
MAX_QUEUE_ITEMS=10

# ===========================
# Context Management
# ===========================
# Maximum conversation exchanges to remember
MAX_CONVERSATION_EXCHANGES=5

# Conversation timeout (seconds)
CONVERSATION_TIMEOUT_SECONDS=300

# ===========================
# Action Execution
# ===========================
# Require confirmation for destructive actions
REQUIRE_ACTION_CONFIRMATION=false

# Action execution timeout (seconds)
ACTION_TIMEOUT_SECONDS=30

# ===========================
# Playwright Configuration
# ===========================
# Enable Playwright MCP integration
PLAYWRIGHT_ENABLED=true

# Browser to use for Playwright
PLAYWRIGHT_BROWSER=chromium

# Headless mode
PLAYWRIGHT_HEADLESS=false
